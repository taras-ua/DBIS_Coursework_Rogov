<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@color/DMilitary" android:id="@+id/introParentLayout" android:gravity="center">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/armyLogoView" android:src="@drawable/army_logo" android:layout_margin="25dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/loginElementsLayout" android:gravity="center"
            android:layout_margin="25dp">
        <EditText
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/loginView" android:hint="@string/login_name" android:textColor="@color/LMilitary"
                android:textColorHint="@color/MMilitary" android:singleLine="true" android:minWidth="200dp"
                android:capitalize="characters" android:editable="true" android:enabled="true"
                android:background="@drawable/edit_field" android:layout_margin="5dp"/>
        <EditText
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:id="@+id/passwordView" android:hint="@string/login_password" android:textColor="@color/LMilitary"
                android:textColorHint="@color/MMilitary" android:singleLine="true" android:password="true"
                android:minWidth="200dp" android:editable="true" android:enabled="true"
                android:background="@drawable/edit_field" android:layout_margin="5dp"/>
        <Button
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="@string/login_button" android:id="@+id/loginButton" android:layout_margin="25dp"
                android:textColor="@color/DMilitary" android:background="@drawable/button"
                android:clickable="true" android:enabled="true"/>
    </LinearLayout>
</LinearLayout>

