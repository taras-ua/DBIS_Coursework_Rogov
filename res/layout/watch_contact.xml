<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/homeParentLayout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/LMilitary">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:id="@+id/nameLayout" android:layout_margin="5dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/typeView" android:layout_margin="5dp" android:layout_gravity="center_vertical"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:id="@+id/nameTextLayout" android:layout_margin="5dp"
                android:layout_weight="1">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="" android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/typeTextView" android:gravity="center_vertical|left" android:singleLine="true"
                    android:ellipsize="marquee" android:textColor="@color/DMilitary" android:textStyle="bold"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="" android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/idView" android:gravity="center_vertical|left" android:singleLine="true"
                    android:ellipsize="marquee" android:textColor="@color/DMilitary" android:textStyle="bold"/>
        </LinearLayout>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/end_contact"
                android:id="@+id/buttonEnd" android:background="@drawable/button"
                android:textColor="@color/DMilitary" android:clickable="true"/>
    </LinearLayout>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeSeparator1" android:background="@drawable/separator"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/equipageButton"
            android:textColor="@color/DMilitary" android:textStyle="bold"
            android:background="@drawable/button_on_light_backgro" android:gravity="center"
            android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/homeSeparator2" android:background="@drawable/separator"
            android:layout_marginLeft="15dp" android:layout_marginRight="15dp"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/startText" android:singleLine="true"
            android:ellipsize="marquee" android:textColor="@color/DMilitary"
            android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" android:gravity="center"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/finishText" android:singleLine="true"
            android:ellipsize="marquee" android:textColor="@color/DMilitary"
            android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" android:gravity="center" android:visibility="gone"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="" android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/infoText" android:singleLine="true"
            android:ellipsize="marquee" android:textColor="@color/DMilitary"
            android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" android:gravity="center"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/packs_of_contact" android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/packageHeadlineText" android:singleLine="true"
            android:ellipsize="marquee" android:textColor="@color/DMilitary"
            android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp" android:gravity="center" android:visibility="gone"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:id="@+id/buttonAdd" android:layout_margin="25dp" android:background="@drawable/button"
            android:textColor="@color/DMilitary" android:clickable="true" android:minWidth="100dp"
            android:layout_gravity="center_horizontal" android:visibility="gone"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/packageView" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"
            android:layout_weight="1" android:visibility="gone"/>
</LinearLayout>